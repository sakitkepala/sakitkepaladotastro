---
import Tanggal from "../components/Tanggal.astro";

type Props = {
  title?: string;
};

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} - ` : ""}sakitkepala.dev</title>
  </head>
  <body>
    <div class="date-bar"><Tanggal /></div>
    <div><slot /></div>
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
  }

  body {
    background-color: #ffffff;
    color: #000000;
    font-family: "sans-serif";
  }

  html,
  body {
    height: 100%;
  }

  body {
    display: grid;
    grid-template-rows: auto 1fr;
  }

  .date-bar {
    display: flex;
    justify-content: flex-end;
  }

  header {
    display: flex;
    justify-content: flex-end;
  }

  nav {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  nav > a {
    display: inline-block;
    color: rgb(0, 0, 238);
    font-size: 2rem;
  }

  nav > a.current-page,
  nav > a:hover {
    color: rgb(85, 26, 139);
  }

  nav > a:active {
    transform: translate(-1px, 4px);
    color: rgb(255, 0, 0);
  }

  .headline {
    font-size: 6rem;
    font-weight: normal;
  }
</style>
